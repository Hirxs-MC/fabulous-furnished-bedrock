{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "ff:toilet",
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ]
                }
            },
            "states": {
                "ff:bathroom_vars": [
                    0,
                    1,
                    2
                ]
            },
            "menu_category": {
                "category": "items"
            }
        },
        "components": {
            "minecraft:geometry": {
                "identifier": "geometry.toilet_closed"
            },
            "minecraft:map_color": "#00ff00",
            "minecraft:material_instances": {
                "*": {
                    "texture": "toilet",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:flammable": {
                "catch_chance_modifier": 5,
                "destroy_chance_modifier": 10
            },
            "minecraft:custom_components": [
                "ff:rider",
                "ff:toilet_function"
            ]
        },
        "permutations": [
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    },
                    "tag:block_north": {}
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('ff:bathroom_vars') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "toilet",
                            "render_method": "opaque",
                            "ambient_occlusion": true
                        }
                    },
                    "minecraft:geometry": "geometry.toilet_closed"
                }
            },
            {
                "condition": "q.block_state('ff:bathroom_vars') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "water": {
                            "texture": "water_still_c",
                            "render_method": "opaque"
                        },
                        "*": {
                            "texture": "toilet",
                            "render_method": "alpha_test",
                            "ambient_occlusion": true
                        }
                    },
                    "minecraft:geometry": "geometry.toilet_open"
                }
            },
            {
                "condition": "q.block_state('ff:bathroom_vars') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "toilet",
                            "render_method": "alpha_test",
                            "ambient_occlusion": true
                        }
                    },
                    "minecraft:geometry": "geometry.toilet_open_empty"
                }
            }
        ]
    }
}